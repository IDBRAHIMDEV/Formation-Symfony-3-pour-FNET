{% extends 'base.html.twig' %}

{% block body %}
    <h1>Posts list</h1>


    <div class="row">
      {% for post in posts %}
       <div class="col-md-4" style="margin-top:10px">
                <div class="card">
                    <h3 class="card-header">{{ post.title }}</h3>
                    <div class="card-body">
                        <h5 class="card-title">Special title treatment</h5>
                        <h6 class="card-subtitle text-muted">Support card subtitle</h6>
                    </div>
                    <img style="height: 200px; width: 100%; display: block;" 
                    src="{{ asset('uploads/posts/'~post.image) }}" alt="Card image">
                    <div class="card-body">
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <a class="btn btn-default" href="{{ path('admin_post_show', { 'id': post.id }) }}">show</a>
                        <a class="btn btn-danger" href="{{ path('admin_post_edit', { 'id': post.id }) }}">edit</a>
                    </div>
                    
                </div>
        </div>
      {% endfor %}
    </div>


    <ul>
        <li>
            <a href="{{ path('admin_post_new') }}">Create a new post</a>
        </li>
    </ul>
{% endblock %}
