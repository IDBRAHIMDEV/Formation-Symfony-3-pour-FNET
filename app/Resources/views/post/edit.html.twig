{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post edit</h1>

    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col-md-8">
           <div class="form-group">
               {{ form_row(edit_form.title, {'attr': {'class': 'form-control'}}) }}
           </div>


            <div class="form-group">
               {{ form_row(edit_form.body, {'attr': {'class': 'form-control'}}) }}
           </div>
            
        </div>
        <div class="col-md-4">

              <div class="form-group">
               {{ form_row(edit_form.image, {'attr': {'class': 'form-control'}}) }}
           </div>
        
             <div class="form-group">
               {{ form_row(edit_form.datepublish, {'attr': {'class': 'form-control'}}) }}
           </div>

           <div class="form-group">
               {{ form_row(edit_form.categories, {'attr': {'class': 'form-control'}}) }}
           </div>

           <input class="btn btn-danger" type="submit" value="Modifier" />
           <a class="btn btn-default" href="{{ path('admin_post_index') }}">Retour</a>
        </div>
    </div>

{{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('admin_post_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
